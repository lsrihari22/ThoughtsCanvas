<%- include("partials/header"); -%>

  <body>
    <div class="container">
      <!-- New Blog Button -->
      <a href="/compose"><button class="new-blog-button">Add New Blog</button></a>

      <h1>Welcome to ThoughtCanvas,</h1>
      <p>
        <%= startingContent %>
      </p>
      <% posts.forEach(function(post){ %>
        <h1>
          <%=post.title%>
        </h1>
        <p>
          <%=post.content.substring(0, 1000) + " ..." %>
            <a href="/posts/<%=post._id%>">Read More</a>
        </p>
        <% }) %>
  </body>

  <%- include("partials/footer"); -%>